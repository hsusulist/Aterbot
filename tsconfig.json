{
        "compilerOptions": {
                "strict": true,
                "target": "ES2022",
                "module": "NodeNext",
                "moduleResolution": "NodeNext",
                "outDir": "./dist",
                "rootDir": "./src",
                "resolveJsonModule": true,
                "esModuleInterop": true,
                "forceConsistentCasingInFileNames": true,
                "skipLibCheck": true
        },
        "include": ["src/**/*"],
        "exclude": ["node_modules", "dist"]
}